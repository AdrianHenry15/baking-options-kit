{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
